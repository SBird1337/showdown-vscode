{
	"name": "lsp-sample",
	"description": "A language server example",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Showdown LSP Configuration",
			"properties": {
				"languageServerShowdown.opponentsFile": {
					"scope": "resource",
					"type": "string",
					"default": "${workspaceRoot}/include/constants/opponents.h",
					"description": "Location of the opponents.h file containing trainer id definitions."
				},
				"languageServerShowdown.trainersFile": {
					"scope": "resource",
					"type": "string",
					"default": "${workspaceRoot}/include/constants/trainers.h",
					"description": "Location of the trainers.h file containing classes, music and picture definitions."
				},
				"languageServerShowdown.battleAiFile": {
					"scope": "resource",
					"type": "string",
					"default": "${workspaceRoot}/include/constants/battle_ai.h",
					"description": "Location of the battle_ai.h file containing AI flag definitions."
				},
				"languageServerShowdown.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "party",
				"aliases": [
					"Showdown",
					"showdown"
				],
				"extensions": [
					".party"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "party",
				"scopeName": "source.party",
				"path": "./syntaxes/party.tmGrammar.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
	"dependencies": {
		"vscode-uri": "^3.1.0"
	}
}
